<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/lyjPreview"
        android:text=""
        android:textSize="25dp"
        android:textColor="#AEACAC"
        android:layout_gravity="right"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    android:layout_marginTop="250dp"-->


    <TextView
        android:id="@+id/lyjResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="150dp"
        android:gravity="bottom"
        android:text=""
        android:textSize="40dp"
        android:clickable="false"
        android:focusable="false"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/lyjBtn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF8C00"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onOpClicked"
            android:text="*"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF8C00"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onOpClicked"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetLeft="0dp"
            android:insetTop="10dp"
            android:insetRight="0dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF8C00"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onOpClicked"
            android:text="+"
            android:textSize="20dp" />
        <Button
            android:id="@+id/lyjBtn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="0"
            android:textSize="20dp" />


        <Button
            android:id="@+id/lyjBtnPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#454747"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="numBtnClicked"
            android:text="."
            android:textSize="20dp" />


        <Button
            android:id="@+id/lyjBtnResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#0461D3"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onEqualClicked"
            android:text="="
            android:textSize="20dp" />

        <Button
            android:id="@+id/lyjBtnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF8C00"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onOpClicked"
            android:text="/"
            android:textSize="20dp" />
        <Button
            android:id="@+id/lyjBtnAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#C50219"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:onClick="onAllClearClicked"
            android:text="AC"
            android:textSize="20dp"
            android:layout_columnSpan="4"/>
    </GridLayout>

</LinearLayout>